.order{
  width: 750rpx;
  display: flex;
  justify-content: space-between;
}
.order .pleft {
  background-color: #F5F5F5;
  padding-top: 20rpx;
  width: 25%;
  height:100vh;
  overflow: auto;
}
/* 滚动时消除滚动条 */
.pleft::-webkit-scrollbar{width: 0;}
.order .pleft .labelItem.nav-active{
  background-color: #fff;
}
.order .pleft .labelItem{
  height: 180rpx;
  align-items: center;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.pleft .labelItem:last-child{
  margin-bottom: 100rpx;
  color: pink;
}

.order .pleft image {
  width: 60rpx;
  height: 60rpx;
}
.order .pleft p{
  font-size: 35rpx;
  color: gray;
}
/* 右侧滚动 */
.scrollV{
  width: 70%;
  height:100vh;
}
/* 滑块自定义样式 */
.swiper-box{
  width: 520rpx;
  height: 300rpx;
}
.swiper-box .slide-image{
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
 width:15rpx;
 display: inline-flex;
 height: 5rpx; 
}
.swiper-box .wx-swiper-dot::before{
 content: '';
 flex-grow: 1;  
 background: rgb(119,118,151);
 border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
 background:rgb(26,43,121);    
}
/* 滚动块 */
.order .psel {margin-bottom: 20rpx;}
.order .psel .ppp{
  margin-top: 40rpx;
}
.order .psel .prow{
  display: flex;
}
.order .psel .prow>image{
  width:33%;
  height: 200rpx;
}

.order .psel .pde{
  width: 67%;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}
/* .order .psel .pde .dpri{
  display: flex;
} */
.order .psel .indexName,.psel .pde text:nth-child(2){
  font-size: 30rpx;
  color: #AFAFAF;
}
.psel .pde text:nth-child(1),.psel .pde text:nth-child(3){font-weight: bold;}

.box{
  margin: 8rpx 0 20rpx;
  /* 高度不能乱写，你要自己去看你的两行文字占多少高度 */
  height:80rpx;
  font-size:15rpx;
  /*overflow 一定要写 */
  overflow:hidden;
  /* 超出省略号 */
  text-overflow: ellipsis;
  /* 一定要写 */
  display:-webkit-box;
  /* 控制行数 */
  -webkit-line-clamp: 2;
  /* 一定要写 */
  -webkit-box-orient: vertical;

}

/* 悬浮块 */
.order .tocart{
  width: 90%;
  height: 100rpx;
  background-color: rgba(50, 50, 50, 0.8);
  border-radius: 50rpx;
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
  z-index: 2;
  display: flex;
  justify-content: space-between;
}
.tocart image{width: 80rpx;height: 80rpx;}
.tocart text{
  color: #fff;
}
.tocart .toshop1{
  margin-left: 50rpx;
  display: flex;
}
.tocart .toshop1 text{
  display: inline-block;
  width: 180rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 50rpx;
  font-size: 40rpx;
}
.tocart .toshop2{
  display: inline-block;
  line-height: 100rpx;
  width: 180rpx;
  height: 100rpx;
  background-color: rgba(0, 0, 255, 0.6);
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  text-align: center;
}

